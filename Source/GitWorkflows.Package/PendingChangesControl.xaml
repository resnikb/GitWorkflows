<UserControl x:Class="GitWorkflows.Package.PendingChangesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vsfx="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.10.0"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Name="MyToolWindow"
             Background="{DynamicResource {x:Static vsfx:VsBrushes.ToolWindowBackgroundKey}}">
    <Grid>
        <ListView ItemsSource="{Binding Status}">
            <ListView.View>
                <GridView AllowsColumnReorder="False">
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding FilePath.FileName}"/>
                    <GridViewColumn Header="Path" DisplayMemberBinding="{Binding FilePath.DirectoryName}"/>
                    <GridViewColumn Header="Status" DisplayMemberBinding="{Binding FileStatus}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
